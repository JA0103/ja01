import java.util.Arrays;
import java.util.Scanner;

public class Today1 {

	public static void main(String[] args) {
		
		
		Scanner sc = new Scanner(System.in);
		System.out.println("나이 입력");
		int age = sc.nextInt();
		
		int calRate = feeCalRate(age);
		resultMoney(calRate);
		
		System.out.println(resultMoney(calRate)+"원");
		
	}//calss.end

	
		static int feeCalRate(int age) {
		int money = 0;
		
		if(0<=age && age<=3)
			money *=0;
		else if(age<=13)
			money*=0.5;
		else if(age<=19)
			money*=0.25;
		else if(age<=64)
			money*=1;
		else if(age>=65)
			money*=0;
		
		return money;
	}
		static int resultMoney(int calRate) {
			int money = 2500;
			int result = money-calRate;
			return result;
		}
}

