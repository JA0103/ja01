import java.util.Arrays;
import java.util.Scanner;

public class Today2 {
	public static void main(String[] args) {
			
			
			Scanner sc = new Scanner(System.in);
			System.out.println("나이 입력");
			int age = sc.nextInt();
			int money = 2500;
			double sale = feeCalRate(age);
			
			double resultFee = money-money*(double)sale; 
			
			
			System.out.println(resultFee);
			
		}//calss.end
	
		
			static double feeCalRate(int age) {
				double rate=0;
			 
				
				if(0<=age && age<=3)
					rate = 0;
				else if(age<=13)
					rate= 0.5;
				else if(age<=19)
					rate= 0.75;
				else if(age<=64)
					rate= 1;
				else if(age>=65)
					rate= 0;
				
				return rate;
		}
	}